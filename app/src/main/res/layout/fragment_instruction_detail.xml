
<!-- Fragment with detail of single Instruction -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/video_player"
        android:layout_width="wrap_content"
        android:layout_height="389dp" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/instruction_detail"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:gravity="bottom"
        android:textIsSelectable="true"
        tools:context="com.gzr7702.freshlybaked.InstructionDetailFragment" />
</LinearLayout>
